<configuration>
    <conversionRule conversionWord="highlightex" converterClass="org.netpreserve.warcbot.util.LogHighlighter"/>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%highlightex(%.-1level) %-8thread %cyan(%logger{15}) %highlightex(%kvp %msg) %n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="ch.qos.logback" level="WARN"/>
    <logger name="org.netpreserve.warcbot.cdp.RPC" level="TRACE"/>
    <logger name="org.slf4j.simpleLogger.log.org.netpreserve.warcbot.Worker" level="DEBUG"/>
</configuration>